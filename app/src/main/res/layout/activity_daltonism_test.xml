<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mirella.badaniewzroku.DaltonismTest"
    android:layout_margin="15dp"

    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:text="Test ostrości wzroku"
        android:textAlignment="center"
        android:textSize="20dp"
        android:id="@+id/textView" />


    <ImageView
        android:id="@+id/imageD"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:src="@drawable/i_3" />

    <NumberPicker
        android:id="@+id/numberPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageD"
        android:layout_marginStart="12dp"
        android:layout_marginTop="14dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn_ready"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numberPicker"
        android:layout_centerHorizontal="true"
        android:text="Zatwierdź"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageD"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="43dp"
        android:text="TextView" />


</RelativeLayout>
