        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Wiek:"
        android:layout_marginBottom="50dp"/>

    <Button
        android:id="@+id/btnGotowe"
        android:layout_width="match_parent"
