<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mirella.badaniewzroku.SharpTest"
    android:layout_margin="20dp"
    android:background="@android:color/white"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Test ostroÅ›ci wzroku"
        android:textAlignment="center"
        android:textSize="20dp"
        android:id="@+id/textView_sharptest"
        android:layout_marginBottom="30dp" />

    <ImageButton
        android:id="@+id/btn_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_down"
        android:layout_below="@+id/textView_sharptest"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="100dp"
        android:background="@color/colorPrimary"
        android:src="@drawable/ic_arrow_upward_black_24dp" />

    <ImageButton
        android:id="@+id/btn_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/imageE"
        android:layout_marginTop="19dp"
        android:background="@color/colorPrimary"
        android:src="@drawable/ic_arrow_back_black_24dp"
        android:layout_marginBottom="30dp" />

    <ImageButton
        android:id="@+id/btn_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btn_left"
        android:layout_gravity="right"
        android:background="@color/colorPrimary"
        android:src="@drawable/ic_arrow_forward_black_24dp" />

    <ImageButton
        android:id="@+id/btn_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="158dp"
        android:src="@drawable/ic_arrow_downward_black_24dp"
        android:background="@color/colorPrimary"/>

    <ImageView
        android:id="@+id/imageE"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/btn_down"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp" />
</RelativeLayout>
